{% extends "base.html.twig" %}

{% block title %}Liste categories
{% endblock %}

{% block body %}
	<a href="{{path('admin.category.create')}}" class="btn btn-primary btn-sm my-3">Créer une catégorie</a>

	<table class="table table-striped">
		<thead>
			<tr>
				<td>Name</td>
				<td>Recettes</td>
				<td style="width: 200px">Actions</td>
			</tr>
		</thead>
		<tbody>
			{% for category in categories %}
				<tr>
					<td>{{ category.name }}</td>
					<td>{{ category.count}}</td>
					<td class="d-flex gap-2">
						<a href="{{ path('admin.category.edit',{id: category.id}) }}" class="btn btn-primary btn-sm">Editer</a>
						<form action="{{ path('admin.category.delete', {id: category.id}) }}" method="post">
							<input type="hidden" name="_methods" value="DELETE">
							<button class="btn btn-danger btn-sm">Supprimer</button>
						</form>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
